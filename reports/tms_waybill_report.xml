<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. Acción del Reporte -->
    <record id="action_report_tms_waybill" model="ir.actions.report">
        <field name="name">Cotización de Flete / Carta Porte</field>
        <field name="model">tms.waybill</field>
        <field name="report_type">qweb-pdf</field>
        <!-- CRÍTICO: Debe coincidir con el ID del template (module.template_id) -->
        <field name="report_name">tms.report_tms_waybill_document</field>
        <field name="report_file">tms.report_tms_waybill_document</field>
        <!-- Nombre del archivo descargado -->
        <field name="print_report_name">'Cotizacion - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="model_tms_waybill"/>
        <field name="binding_type">report</field>
    </record>

    <!-- 2. Template QWeb -->
    <template id="report_tms_waybill_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row mb-4">
                            <div class="col-8">
                                <h2>Cotización <span t-field="o.name"/></h2>
                            </div>
                            <div class="col-4 text-end">
                                <span class="badge rounded-pill text-bg-primary" t-field="o.state"/>
                            </div>
                        </div>

                        <!-- Bloque de Actores -->
                        <div class="row mb-4 border-bottom pb-3">
                            <div class="col-4">
                                <strong>Facturación:</strong><br/>
                                <span t-field="o.partner_invoice_id.name"/><br/>
                                <span t-field="o.invoice_rfc"/>
                            </div>
                            <div class="col-4">
                                <strong>Origen:</strong><br/>
                                <span t-field="o.origin_city_id.name"/><br/>
                                <small t-field="o.origin_address"/>
                            </div>
                            <div class="col-4">
                                <strong>Destino:</strong><br/>
                                <span t-field="o.dest_city_id.name"/><br/>
                                <small t-field="o.dest_address"/>
                            </div>
                        </div>

                        <!-- Mercancías -->
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr><th>Cant</th><th>Descripción</th><th>Peso</th></tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="l">
                                    <td><span t-field="l.quantity"/></td>
                                    <td><span t-field="l.description"/></td>
                                    <td><span t-field="l.weight_kg"/> kg</td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Totales -->
                        <div class="row justify-content-end">
                            <div class="col-4 text-end">
                                <h3>Total: <span t-field="o.amount_total"/></h3>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
