<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. ACCIÓN DEL REPORTE -->
    <record id="action_report_tms_waybill" model="ir.actions.report">
        <field name="name">Formato de Viaje / Carta Porte</field>
        <field name="model">tms.waybill</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tms.report_tms_waybill_document</field>
        <field name="report_file">tms.report_tms_waybill_document</field>
        <field name="print_report_name">'Viaje - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="model_tms_waybill"/>
        <field name="binding_type">report</field>
    </record>

    <!-- 2. PLANTILLA DEL REPORTE -->
    <template id="report_tms_waybill_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- ENCABEZADO -->
                        <div class="row mb-4">
                            <div class="col-8">
                                <h2>
                                    <span t-if="o.waybill_type == 'income'">Carta Porte Ingreso</span>
                                    <span t-else="">Carta Porte Traslado</span>
                                    <span t-field="o.name"/>
                                </h2>
                            </div>
                            <div class="col-4 text-end">
                                <span class="badge rounded-pill text-bg-primary" t-field="o.state"/>
                                <br/>
                                <strong>Fecha:</strong> <span t-field="o.date_created"/>
                            </div>
                        </div>

                        <!-- ACTORES -->
                        <div class="row mb-4 border-bottom pb-3">
                            <div class="col-4">
                                <strong>Cliente Facturación:</strong><br/>
                                <span t-field="o.partner_invoice_id.name"/><br/>
                                <span t-field="o.invoice_rfc"/><br/>
                                <small t-field="o.invoice_address"/>
                            </div>
                            <div class="col-4">
                                <strong>Origen:</strong><br/>
                                <span t-field="o.partner_origin_id.name"/><br/>
                                <span t-field="o.origin_city_id.name"/>, <span t-field="o.origin_zip"/><br/>
                                <small t-field="o.origin_address"/>
                            </div>
                            <div class="col-4">
                                <strong>Destino:</strong><br/>
                                <span t-field="o.partner_dest_id.name"/><br/>
                                <span t-field="o.dest_city_id.name"/>, <span t-field="o.dest_zip"/><br/>
                                <small t-field="o.dest_address"/>
                            </div>
                        </div>

                        <!-- RUTA Y UNIDAD -->
                        <div class="row mb-4 bg-light p-2">
                            <div class="col-3"><strong>Vehículo:</strong> <span t-field="o.vehicle_id.license_plate"/></div>
                            <div class="col-3"><strong>Chofer:</strong> <span t-field="o.driver_id.name"/></div>
                            <div class="col-3"><strong>Distancia:</strong> <span t-field="o.distance_km"/> km</div>
                            <div class="col-3"><strong>Ruta:</strong> <span t-field="o.route_name"/></div>
                        </div>

                        <!-- MERCANCÍAS -->
                        <table class="table table-sm table-striped mb-4">
                            <thead>
                                <tr>
                                    <th>Cant</th>
                                    <th>Unidad</th>
                                    <th>Descripción</th>
                                    <th>Producto SAT</th>
                                    <th>Peso (kg)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <td><span t-field="line.quantity"/></td>
                                    <td><span t-field="line.uom_sat_id.name"/></td>
                                    <td><span t-field="line.description"/></td>
                                    <td><span t-field="line.product_sat_id.code"/></td>
                                    <td><span t-field="line.weight_kg"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- TOTALES (Solo Ingreso) -->
                        <div class="row justify-content-end" t-if="o.waybill_type == 'income'">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Total</strong></td>
                                        <td class="text-end">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
