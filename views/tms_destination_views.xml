<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        ================================================================
        VISTAS DE RUTAS COMERCIALES (Punto A -> Punto B)
        ================================================================
        Modelo: tms.destination
        Uso: Gestionar rutas frecuentes de la empresa
    -->

    <!-- Vista List (Lista) -->
    <record id="view_tms_destination_tree" model="ir.ui.view">
        <field name="name">tms.destination.tree</field>
        <field name="model">tms.destination</field>
        <field name="arch" type="xml">
            <list string="Rutas Comerciales">
                <!-- Columna: Nombre de la ruta (Calculado) -->
                <field name="name"/>

                <!-- Columna: Origen -->
                <field name="origin_zip"/>

                <!-- Columna: Destino -->
                <field name="dest_zip"/>

                <!-- Columna: Vehículo -->
                <field name="vehicle_type_id"/>

                <!-- Columna: Distancia -->
                <field name="distance_km" sum="Total Km"/>

                <!-- Columna: Duración -->
                <field name="duration_hours" optional="show"/>

                <!-- Columna: Costo Casetas -->
                <field name="cost_tolls" widget="monetary" optional="show"/>

                <!-- Columna: Última act -->
                <field name="last_update"/>

                <!-- Columna: Activa -->
                <field name="active" widget="boolean_toggle"/>

                <!-- Campo oculto: compañía (para multi-empresa) -->
                <field name="company_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Vista Form (Formulario) -->
    <record id="view_tms_destination_form" model="ir.ui.view">
        <field name="name">tms.destination.form</field>
        <field name="model">tms.destination</field>
        <field name="arch" type="xml">
            <form string="Ruta Comercial">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ruta Auto-generada" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <!-- Primera columna: Origen / Destino -->
                        <group string="Ubicación">
                            <field name="origin_zip" placeholder="Ej. 45000"/>
                            <field name="dest_zip" placeholder="Ej. 11000"/>
                             <field name="vehicle_type_id"/>
                        </group>

                        <!-- Segunda columna: Métricas -->
                        <group string="Métricas (Cache)">
                            <field name="distance_km"/>
                            <field name="duration_hours" widget="float_time"/>
                            <field name="cost_tolls" widget="monetary"/>
                            <field name="last_update" readonly="1"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                             <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <!-- Campo: Notas (ancho completo) -->
                        <field name="notes" placeholder="Observaciones adicionales..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search (Búsqueda) -->
    <record id="view_tms_destination_search" model="ir.ui.view">
        <field name="name">tms.destination.search</field>
        <field name="model">tms.destination</field>
        <field name="arch" type="xml">
            <search string="Buscar Rutas">
                <field name="name"/>
                <field name="origin_zip"/>
                <field name="dest_zip"/>
                <field name="vehicle_type_id"/>

                <!-- Filtro: Solo rutas activas -->
                <filter name="filter_active" string="Activas"
                        domain="[('active', '=', True)]"/>

                <!-- Agrupación -->
                <group expand="0" string="Agrupar Por">
                    <filter name="group_origin" string="CP Origen"
                            context="{'group_by': 'origin_zip'}"/>
                    <filter name="group_dest" string="CP Destino"
                            context="{'group_by': 'dest_zip'}"/>
                    <filter name="group_vehicle" string="Tipo Vehículo"
                            context="{'group_by': 'vehicle_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action (Acción de Ventana) -->
    <record id="action_tms_destination" model="ir.actions.act_window">
        <field name="name">Rutas Comerciales</field>
        <field name="res_model">tms.destination</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva ruta comercial
            </p>
            <p>
                Define rutas frecuentes (Punto A -> Punto B) con distancias, duraciones y costos de casetas estimados.
                Al seleccionar una ruta en un viaje, se auto-llenan origen, destino, distancia y duración.
            </p>
        </field>
    </record>

</odoo>
